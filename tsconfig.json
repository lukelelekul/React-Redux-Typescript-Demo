{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "lib": ["es2020", "dom"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@dsm": ["src/dsm"],
      "@models": ["src/models"],
      "@redux": ["src/redux"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "src/dsm", "dist", "*/__test__/**/*"]
}
